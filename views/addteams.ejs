<%- include('./partials/header.ejs')%>
    <link rel="stylesheet" href="/stylesheets/createtournament.css">
    <div class="container-fluid" style="background-color: aqua;">
        <div class="row">
            <h1>Create Tournament</h1>
            <p>Create a custom tournament.
            </p>
            <div class="container">
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-3">
                        <div class="card">
                            Step 1: Add Teams
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card">
                            Step 2: Add Players
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card">
                            Step 3: Add Matches
                        </div>
                    </div>
                    <div class="col-1"></div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-8">
                <form action="/createtournament/<%= tourid %>/addteam" method='post'>
                    <label for="addteam">Team Name</label>
                    <input type="text" id="addteam" placeholder="Enter team name" name="addteam">
                    <button type="submit">Add Team</button>
                </form>

                <span>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Deserunt, corporis! Aliquid cumque totam
                    nam, rerum, ab impedit dolorum ex quidem sequi placeat expedita harum velit itaque quasi aspernatur
                    nemo consectetur.</span>
            </div>
        </div>
        <% if(row.length !=0){ %>
            <div id="appendhere" class="row">
                <% for(let i=0;i<row.length;i++){%>
                    <div class="card col-lg-4">
                        <div class="card-body">
                            <h3 class="card-title">
                                <%= row[i].team_name %>
                            </h3>
                        </div>
                        <a class="card-link" href="/createtournament/<%=tourid%>/addteam/<%= row[i].id %>">Add
                            Players</a>
                        <a class="card-link" href="#">Edit Team</a>
                        <a class="card-link" href="#">Delete Team</a>

                    </div>

                    <% } %>


            </div>
            <% } %>
                <a href="/createtournament/<%= tourid %>/addmatch" class="btn btn-primary">Confirm Team</a>

    </div>
    <script src="/scripts/addteams.js"></script>