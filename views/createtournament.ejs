<%- include('./partials/header.ejs')%>
    <link rel="stylesheet" href="/stylesheets/createtournament.css">
    <div class="container-fluid" style="background-color: aqua;">
        <div class="row">
            <h1>Create Tournament</h1>
            <p>Create a custom tournament.
            </p>
            <div class="container">
                <div class="row">
                    <div class="col-4">
                        <div class="card">
                            Step 1: Add Teams
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card">
                            Step 2: Add Players
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card">
                            Step 3: Add Matches
                        </div>
                    </div>
                    <div class="col-1"></div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-8">
                <form method='post' action="/createtournament/addteams">
                    <label for="tourname">Tournament Name</label>
                    <input type="text" id="tourname" placeholder="Enter tournament name" name="tourname"><br>
                    <label for="tourformat">Tournament Format</label>
                    <input type="text" id="tourformat" placeholder="Enter tournament format" name="tourformat"><br>
                    <label for="numteam">Total Teams</label>
                    <select name="numteam" id="numteam">
                        <option value="0">---SELECT TOTAL---</option>
                        <%for(let i=2;i<=16;i++){%>
                            <option value="<%=i%>">
                                <%=i%>
                            </option>
                            <%}%>
                    </select>
                    <label for="touryear">Tournament Year</label>
                    <input type="text" id="touryear" placeholder="Enter tournament year" name="touryear"><br>
                    <button type="submit">Add Tournament</button>
                </form>

            </div>
        </div>
        <div id="appendhere" class="row">

        </div>
    </div>
    <script src="/scripts/createtourney.js"></script>